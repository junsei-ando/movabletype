<mt:setvarblock name="delete_button_title"><__trans phrase="Delete selected [_1] (x)" params="<mt:var name="object_label_plural" lower_case="1">"></mt:setvarblock>

<mt:setvarblock name="css_include" append="1">
<style>
#content_type-listing-table td.content-field table td,
#content_type-listing-table td.content-field table th {
  border: 1px solid #000000;
}

tr.preview-field {
  background-color: #f4f4f4;
}

td.content-field .mt-icon--secondary{
  margin: 0 .5rem 0 0;
  transition: 0.2s ease-in-out;
}
td.content-field a[aria-expanded="false"] .mt-icon--secondary{
  transform: rotate(180deg);
}
td.content-field a[aria-expanded="true"] .mt-icon--secondary{
  transform: rotate(0deg);
}
</style>
</mt:setvarblock>

<mt:setvarblock name="action_buttons">
<button
   accesskey="x"
   title="<$mt:var name="delete_button_title"$>"
   class="button mt-delete-items btn btn-default">
  <__trans phrase="Delete">
</button>
</mt:setvarblock>

<mt:setvarblock name="original_blog_id"><mt:var name="blog_id"></mt:setvarblock>

<mtapp:listing  hide_pager="1">
  <mt:if name="__first__">
    <mt:setvarblock name="table_header">
    <tr>
      <th class="head cb">
        <div class="custom-control custom-checkbox">
          <input id="select_all" type="checkbox" name="id-head" value="all" class="custom-control-input select" />
          <label class="custom-control-label" for="select_all"><span class="sr-only"><__trans phrase="Select All"></span></label>
        </div>
      </th>
      <th class="head name primary"><span class="col-label"><__trans phrase="Name"></span></th>
      <mt:unless name="is_blog">
      <th class="head blog"><span class="col-label"><__trans phrase="Site/Child Site"></span></th>
      </mt:unless>
      <th class="head datetime"><span class="col-label"><__trans phrase="Created"></span></th>
      <th class="head field"><span class="col-label"><__trans phrase="Content Field"></span></th>
    </tr>
    </mt:setvarblock>
  <thead>
    <mt:var name="table_header">
  </thead>
  <tbody>
  </mt:if>
    <tr>
      <td class="cb">
  <mt:if name="has_edit_access">
        <div class="custom-control custom-checkbox">
          <input id="select_<mt:var name="id" escape="html">" type="checkbox" name="id" value="<$mt:var name="id"$>" class="custom-control-input select" />
          <label class="custom-control-label" for="select_<mt:var name="id" escape="html">"><span class="sr-only"><__trans phrase="Select"></span></label>
        </div>
  <mt:else>
        &#160;
  </mt:if>
      </td>
      <td class="id">
        <strong>
          <a href="<$mt:var name="script_url"$>?__mode=view&amp;_type=<mt:var name="object_type">&amp;id=<$mt:var name="id"$>&amp;blog_id=<$mt:var name="blog_id"$>" target="_blank">
            <$mt:var name="name" escape="html"$>
          </a>
        </strong>
        <br/>
  <mt:if name="has_edit_access">
        <a href="<$mt:var name="script_url"$>?__mode=view&amp;_type=<mt:var name="object_type">&amp;id=<$mt:var name="id"$>&amp;blog_id=<$mt:var name="blog_id"$>" target="_blank">
          <__trans phrase="Edit Content Type">
        </a>
  <mt:else>
        &#160;
  </mt:if>
      </td>
  <mt:unless name="blog_view">
    <mt:unless name="scope_type" eq="blog">
      <td class="blog">
        <a href="<$mt:var name="script_url"$>?__mode=list&_type=<mt:var name="object_type">&amp;blog_id=<$mt:var name="blog_id"$>&amp;type=content_type_<mt:var name="content_type_id" escape="html">">
          <$mt:var name="blog_name" escape="html"$>
        </a>
      </td>
    </mt:unless>
  </mt:unless>
      <td class="datetime">
        <span title="<$mt:var name="created_on_time_formatted"$>">
      <mt:if name="created_on_relative">
        <mt:if name="dates_relative">
          <mt:var name="created_on_relative">
        <mt:else>
          <mt:var name="created_on_formatted">
        </mt:if>
      <mt:else>
        <mt:var name="created_on_formatted">
      </mt:if>
        </span>
      </td>
      <td class="content-field">
        <a class="d-inline-block" data-toggle="collapse" href="#content-type-field-<mt:var name="id" escape="html">" aria-expanded="false" aria-controls="content-type-field-<mt:var name="id" escape="html">">
          <mtapp:svgicon title="Collapse" color="secondary" id="ic_collapse">
        </a>
      </td>
    </tr>
    <tr class="preview-field">
      <td class="p-0" colspan="8">
        <div class="collapse mt-collapse__content" id="content-type-field-<mt:var name="id" escape="html">">
          <mt:var name="preview_field">
        </div>
      </td>
    </tr>
  <mt:if name="__last__">
  </tbody>
</mt:if>

</mtapp:listing>

<mt:setvarblock name="jq_js_include" append="1">
    jQuery('button.mt-delete-items').mtDeleteItems({
        id: '<$mt:var name="object_type"$>-listing-form',
        singular: '<mt:var name="object_label" lower_case="1" escape="js">',
        plural: '<mt:var name="object_label_plural" lower_case="1" escape="js">',
        args: {<mt:if name="search">'search': '<mt:var name="search" escape="js">'</mt:if>}
    });

    jQuery('#content_type-listing-table tr.preview-field').hide();
    jQuery('#content_type-listing-table tr.preview-field div')
        .on('show.bs.collapse', function () {
            jQuery(this).parents('tr').show();
        })
        .on('hidden.bs.collapse', function () {
            jQuery(this).parents('tr').hide();
        });

  <mt:if name="error">
    <mt:if name="replace">
    $('#search-replace-toggle-replace').click();
    </mt:if>
  </mt:if>
</mt:setvarblock>

